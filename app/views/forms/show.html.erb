<div class="grid grid-cols-3 h-screen p-4 gap-4" id="template">
  <div class="col-span-2 grid grid-rows-6 gap-6" id="left">
    <div class="grid grid-rows-2 text-7xl" id="name">
      <h1><%= @form.first_name %></h1>
      <h1 class="text-slate-600"><%= @form.last_name %></h1>
    </div>
    <div id="about">
      <h2 class="text-4xl">Profile</h2>
      <p class="p-3 text-md tracking-wide"><%= @form.about_you %></p>
    </div>
    <div class="row-span-4" id="experience">
      <h2 class="text-4xl">Experience</h2>
      <p class="pl-2 text-xl font-medium text-slate-500"><%= @form.prev_job_title %></p>
      <p class="pl-2 text-xl font-semibold text-slate-600"><%= @form.prev_company %></p>
      <p class="pl-2 text-sm text-slate-400"><%= @form.prev_company_address %></p>
      <p class="pl-2 text-sm text-slate-400"><%= @form.prev_job_starting_year %> - <%= @form.prev_job_ending_year %></p>
      <p class="pl-3 pt-1 text-md tracking-wide"><%= @form.about_prev_job %></p>
    </div>
  </div>
  <div id="right" class="p-1">
    <div class="photo-card bg-gray-700 px-2 pb-2">
      <% if @form.photo.attached? %>
        <div id="photo">
          <%= image_tag @form.photo, class:"aspect-square" %>
        </div>
        <% else %>
        <%= image_tag "personalPhoto.png", class:"aspect-square" %>
      <% end %>
      <div class="text-center text-light text-xl text-pretty" id="contact">
        <p>Email: <%= @form.email %></p>
        <hr>
        <p>Phone: <%= @form.phone %></p>
        <hr>
        <p>Address: <%= @form.address %></p>
      </div>
    </div>
    <div class="border-l-2 border-slate-600">
      <div class="pl-2 mt-5" id="education">
        <h2 class="text-slate-800 text-2xl">Education</h2>
        <p class="mt-3 font-bold text-slate-600 pl-3"><%= @form.degree %></p>
        <p class="text-slate-500 pl-3"><%= @form.college %></p>
        <p class="text-slate-400 pl-3"><%= @form.degree_starting_year %> - <%= @form.degree_finishing_year %></p>
      </div>
      <div class="pl-2 mt-5" id="skills">
        <h2 class="text-slate-800 text-2xl">Skills</h2>
        <ul class="list-inside text-xl">
          <% @skills.each do |skill| %>
            <li class="mt-1 text-slate-600 pl-3"><%= skill %></li>
          <% end %>
        </ul>
      </div>
      <div class="pl-2 mt-5" id="languages">
        <h2 class="text-slate-800 text-2xl">Languages</h2>
        <ul class="list-inside text-xl">
          <% @languages.each do |language| %>
            <li class="mt-1 text-slate-600 pl-3"><%= language %></li>
          <% end %>
        </ul>
      </div>
      <div class="pl-2 mt-5" id="reference">
        <h2 class="text-slate-800 text-2xl">Reference</h2>
        <p class="mt-3 text-slate-600 pl-3"><%= @form.ref_name %> | <%= @form.ref_email %> | <%= @form.ref_email %> </p>
      </div>
    </div>
  </div>
</div>
<button onclick="window.print()" class="no-print">Print</button>