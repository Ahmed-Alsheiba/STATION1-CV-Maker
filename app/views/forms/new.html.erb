<p>Personal Info</p>
<div class="grid grid-cols-3 gap-10 grid-rows-1 m-2">
  <%= form_with model: @form, class:"col-span-2 ga", local: true do |f| %>
    <div class="grid grid-rows-3 custom-grid gap-10">
      <div class="gird grid-cols-3 gap-1">
        <%= f.file_field :photo, class: "bg-gray-200 size-52 min-w-[32%] rounded content-center " %>
        <%= f.text_field :first_name , class:"w-1/3 h-16", placeholder:"First name" %>
        <%= f.text_field :last_name , class:"w-1/3 h-16", placeholder:"Last name" %>
      </div>
      <div class="flex gap-1 max-h-16">
        <%= f.email_field :email, class:"w-1/2 h-16", placeholder:"Email" %>
        <%= f.phone_field :phone, class:"w-1/2 h-16", placeholder:"Phone number" %>
      </div>
      <div class="h-fit">
        <%= f.text_field :address, class:"w-full h-16", placeholder:"Address" %>
      </div>
      <hr class="my-4 border-gray-300">
      <div class="flex gap-1 max-h-16">
        <%= f.text_field :degree, class:"w-1/2 h-16", placeholder:"Degree" %>
        <%= f.text_field :college, class:"w-1/2 h-16", placeholder:"College" %>
      </div>
      <div class="flex gap-1 max-h-16">
        <%= f.number_field :degree_starting_year, class:"w-1/2 h-16", placeholder:"Starting Year", min: 1900, max: Date.today.year %>
        <%= f.number_field :degree_finishing_year, class:"w-1/2 h-16", placeholder:"Finishing Year", min: 1900 %>
      </div>
      <%= f.submit 'Next', class:"w-1/4 justify-self-center focus:outline-none text-light hover:text-white bg-porange hover:bg-ldark focus:ring-4  font-medium rounded-lg text-sm px-5 py-2.5 dark:focus:ring-yellow-900" %>
    </div>
  <% end %>
  <%= image_tag 'template1.png', class:"h-[90vh] col-span-1 rounded justify-self-center" %> 
</div>
