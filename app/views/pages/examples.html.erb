<h1 class="text-6xl max-lg:text-5xl text-porange grid absolute inset-x-0 top-0 justify-center font-bold">STATOIN1</h1>
<div class="grid grid-cols-4 h-screen content-center">
  <div class="col-span-2 max-lg:col-span-4 content-center max-lg:text-center">
    <h3 class="text-4xl max-xl:text-2xl text-pdark pl-3 pt-4">Example CVs</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-1 mt-6">
      <% @forms.each do |form| %>
        <div class="border p-4 m-4 rounded-lg shadow hover:shadow-lg transition duration-200 ease-in-out">
          <h3 class="text-xl font-semibold text-pdark"><%= form.first_name %> <%= form.last_name %></h3>
          <p class="text-ldark"><%= form.email %></p>
          <%= link_to 'View CV', form_path(form), class: "text-porange hover:underline" %>
        </div>
      <% end %>
    </div>
    <div class="justify-self-center w-fit rounded-lg mt-7 pl-5 pr-5 pt-2 pb-2 bg-porange text-light text-xl hover:text-ldark transition duration-300 ease-in-out">
      <%= link_to 'Create Yours Now!!', new_form_path %>
    </div>
  </div>
  <div class="grid max-lg:hidden col-span-2 relative justify-center h-screen">
    <%= image_tag 'CV2', class:"max-h-[80%] max-xl:max-h-[50%] self-center absolute inset-y-[10%] inset-x-1/4 rounded-lg outline shadow-xl origin-bottom -rotate-[9deg] blur-sm" %>
    <%= image_tag 'CV3', class:"max-h-[80%] max-xl:max-h-[50%] self-center absolute inset-y-[10%] inset-x-1/4 rounded-lg outline shadow-xl origin-bottom rotate-[14deg] blur-sm" %>
    <%= image_tag 'CV1', class:"max-h-[80%] max-xl:max-h-[50%] self-center absolute inset-y-[10%] inset-x-1/4 rounded-lg outline shadow-xl" %>
  </div>
</div>